<section class="sub-head-container">
    <div class="container sub-head-wrapper" style="text-align: center">
        <h2>Sign In</h2>
    </div>
</section>
<br>
<div class="row">
    <div class="col-10 col-sm-6 col-md-4 offset-1 offset-sm-3 offset-md-4">
        {{#if hasErrors}}
        <div class="alert alert-danger">
            {{# each messages }}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}
        <form action="/user/signin" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">Sign In</button>
            <p class="social-seperator"> Or </p>
            <a href="/user/facebook" class="btn btn-social btn-facebook color-white">
                <span class="fab fa-facebook-f color-white"></span> Sign in with Facebook
            </a>
        </form>
        <p class="change-auth">(Don't have an account?
            <a href="/user/signup">Sign Up instead!</a>)
        </p>
    </div>
</div>